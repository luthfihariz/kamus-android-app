<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/normal_margin"
    tools:context="com.luthfihariz.kamusbetawi.MainActivity">

    <TextView
        android:id="@+id/tv_terms"
        style="@style/Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="Terms" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/Paragraph2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_terms"
        android:layout_centerInParent="true"
        android:textColor="@color/gray"
        tools:text="The description of the terms above" />


    <TextView
        android:id="@+id/tv_random"
        style="@style/Paragraph4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="@string/tap_anywhere"
        android:textColor="@color/gray" />

</RelativeLayout>
